# Required SMTP Settings
SMTP_HOST=smtp.gmail.com          # Your SMTP server
SMTP_PORT=587                     # SMTP port (587 for TLS, 465 for SSL)
SMTP_USER=your-email@gmail.com    # Your email address
SMTP_PASS=your-app-password       # Your email password or app password
SMTP_FROM=your-email@gmail.com    # From email address
SMTP_TLS=true                     # Use TLS encryption

# Admin Settings
ADMIN_EMAIL=admin@yourdomain.com  # Admin email for notifications
APP_SECRET=your-secret-key        # Flask secret key